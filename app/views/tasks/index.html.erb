<h1>Tasks for <%= @parent_category.name %></h1>

<table class="table table-hover">
    <thead>
    <tr>
        <th>Name</th>
        <th>Duedate</th>
        <th>Complete</th>
        <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @tasks.each do |task| %>
        <tr>
            <td><h4><%= task.name %></h4></td>
            <td><h5><%= task.duedate.strftime("%A, %B %e at %l:%M %p") %></h5></td>
            <td><h6 class="text-capitalize"><%= task.complete %></h6></td>
            <td><%= link_to 'Show',
                            task,
                            class: 'btn btn-info' %></td>
            <td><%= link_to 'Edit',
                            edit_task_path(task),
                            class: 'btn btn-warning' %></td>
            <td><%= link_to 'Destroy',
                            task,
                            method: :delete,
                            data: { confirm: 'Are you sure?' },
                            class: 'btn btn-danger' %></td>
        </tr>
    <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Task', new_category_task_path, class: 'btn btn-success btn-lg' %>
